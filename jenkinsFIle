pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Build stage completed'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing stage completed'
                post {
                    always {
                        echo 'I will always say Hello again!'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy stage completed'
            }
        }
        post {
            failure {
                echo 'Pipeline Failed'
            }
        }
    }
}